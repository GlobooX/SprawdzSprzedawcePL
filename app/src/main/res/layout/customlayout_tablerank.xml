<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:drawable/picture_frame">


    <!-- INFOMACJE O USERZE -->

    <TextView
        android:id="@+id/textViewPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="#1"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewRankUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewPosition"
        android:layout_marginStart="69dp"
        android:text="NAZWA"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/textViewRankSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewPosition"
        android:layout_alignStart="@+id/textViewRankUser"
        android:text="SINCE"
        android:textSize="10dp" />


    <ImageView
        android:id="@+id/imageViewComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewPosition"
        android:layout_marginEnd="122dp"
        app:srcCompat="@drawable/ic_comments"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textViewRankCommentsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageViewComments"
        android:layout_marginEnd="127dp"
        android:text="1" />


    <!--  POZYTYWY NEGATYWY -->
    <ImageView
        android:id="@+id/iamgeViewPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewPosition"
        android:layout_marginEnd="88dp"
        app:srcCompat="@drawable/ic_positive_user"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textViewRankPositiveCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iamgeViewPositive"
        android:layout_marginEnd="94dp"
        android:text="1" />


    <ImageView
        android:id="@+id/imageViewNeutral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewPosition"
        android:layout_marginEnd="54dp"
        app:srcCompat="@drawable/ic_neutral_user"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textViewRankNeutralCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageViewNeutral"
        android:layout_marginEnd="62dp"
        android:text="1" />


    <ImageView
        android:id="@+id/iamgeViewNegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewPosition"
        android:layout_marginEnd="19dp"
        app:srcCompat="@drawable/ic_negative_user"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textViewRankNegativeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iamgeViewNegative"
        android:layout_marginEnd="29dp"
        android:text="1" />

</RelativeLayout>