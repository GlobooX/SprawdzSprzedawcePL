<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:drawable/picture_frame">


    <ImageView
        android:id="@+id/icProfile"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icProfile"
        android:layout_toEndOf="@+id/icProfile"
        android:text="SENDEER"
        android:textStyle="bold|italic" />


    <ImageView
        android:id="@+id/icTime"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/icProfile"
        android:layout_marginLeft="2dp"
        android:src="@drawable/ic_time" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewUser"
        android:layout_below="@+id/textViewUser"
        android:text="23 maj, 131:10"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:text="MESSAGE" />

    <View
        android:id="@+id/pasek"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/textViewDate"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"/>


    <Button
        android:id="@+id/buttonDeleteComment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_delete_comment" />

    <Button
        android:id="@+id/buttonEditComment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/ic_edit_comment" />


</RelativeLayout>