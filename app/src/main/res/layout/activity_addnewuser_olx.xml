<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="131dp"
            android:layout_height="112dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/usernotfound" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/card_view"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:text="Wygląda na to, że w naszej bazie nie ma opinii na temat tego użytkownika z platformy OLX"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#323c3f"
            android:textSize="16dp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="120dp"
            android:text="Nikt inny nie dodał opini ani komentarzu, który przypisany jest do podanego przez Ciebie użytkownika OLX. Jeśli chcesz być pierwszą osobą, która to zrobi kliknij przycisk poniżej.


Pamiętaj, aby przestrzegać regulaminu podczas korzystania z aplikacji. Zwróć uwagę na poprawność dodawanego komentarza." />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/buttonAddNewUserOLX"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/card_view"
        android:layout_alignTop="@+id/buttonCancelAddUser"
        android:background="@drawable/blue_btn_bkg"
        android:text="DODAJ UŻYTKOWNIKA DO BAZY"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonCancelAddUser"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/card_view"
        android:layout_marginBottom="10dp"
        android:background="@drawable/red_btn_bkg"
        android:text="ANULUJ"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold" />

</RelativeLayout>